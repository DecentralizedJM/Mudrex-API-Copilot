# QA Watchdog Bot Configuration
# Copy this to .env and fill in your values

# Required: QA Bot's Telegram token (create via @BotFather)
QA_TELEGRAM_BOT_TOKEN=your_qa_bot_token_here

# Required: Test group chat ID
QA_TEST_GROUP_ID=-1003269114897

# Required: Gemini API key for grading
QA_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Copilot bot username to mention (default: API_Assistant_V2_bot)
COPILOT_BOT_USERNAME=API_Assistant_V2_bot

# Optional: Admin username to tag on failures (default: DecentralizedJM)
ADMIN_USERNAME=DecentralizedJM

# Optional: Gemini model (default: gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# Optional: Redis URL for state persistence
REDIS_URL=

# Optional: Timing configuration
RESPONSE_TIMEOUT=60
TEST_INTERVAL=30

# Optional: Schedule configuration (UTC)
DAILY_QA_HOUR=3
DAILY_QA_MINUTE=0
CRITICAL_TEST_INTERVAL_HOURS=6
SPOT_CHECK_INTERVAL_HOURS=2

# Optional: Test counts
DAILY_TEST_COUNT=20
CRITICAL_TEST_COUNT=5
SPOT_CHECK_COUNT=2

# Optional: Health check port (default: 8081)
HEALTH_PORT=8081

# Direct API - Telegram doesn't deliver bot-to-bot messages; use Copilot HTTP API
# Get Copilot URL from Railway (e.g. https://xxx.up.railway.app)
# COPILOT_QA_URL=https://your-copilot.up.railway.app
# QA_API_SECRET=your_shared_secret
